<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.insurance.insuranceapp.Activites.HospitalBlockActivity">




            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
              >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/reaal"
                    android:padding="5dp"

                    >


                    <TextView
                        android:id="@+id/file11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/title11"
                        android:text="Choose File"
                        android:layout_marginTop="3dp"
                        android:padding="3dp"
                        android:fontFamily="@font/verdana"
                        android:textColor="@color/Black"
                        android:textSize="16dp"
                        android:background="@drawable/rounded_border_edittext"/>

                    <TextView
                        android:id="@+id/filename11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/file11"
                        android:layout_alignBottom="@+id/file11"
                        android:layout_marginLeft="11dp"
                        android:layout_marginStart="11dp"
                        android:layout_toEndOf="@+id/file11"
                        android:layout_toRightOf="@+id/file11"
                        android:fontFamily="@font/verdana"
                        android:textSize="12dp"
                        android:text="No file chosen  File Should be pdf/doc Format"
                        android:textColor="@color/Black" />

                    <TextView
                        android:id="@+id/title11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/verdana"
                        android:textSize="13dp"
                        android:paddingTop="2dp"
                        android:textColor="@color/Black"
                        android:text="Company Authorization Letter towards the hospital *" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/rea"
                    android:layout_below="@+id/reaal"
                    android:padding="5dp"

                    >


                    <TextView
                        android:id="@+id/file12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/title12"
                        android:text="Choose File"
                        android:layout_marginTop="3dp"
                        android:padding="3dp"
                        android:fontFamily="@font/verdana"
                        android:textColor="@color/Black"
                        android:textSize="16dp"
                        android:background="@drawable/rounded_border_edittext"/>

                    <TextView
                        android:id="@+id/filename12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/file12"
                        android:layout_alignBottom="@+id/file12"
                        android:layout_marginLeft="11dp"
                        android:layout_marginStart="11dp"
                        android:layout_toEndOf="@+id/file12"
                        android:layout_toRightOf="@+id/file12"
                        android:fontFamily="@font/verdana"
                        android:textSize="12dp"
                        android:text="No file chosen  File Should be pdf/doc Format"
                        android:textColor="@color/Black" />

                    <TextView
                        android:id="@+id/title12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/verdana"
                        android:textSize="13dp"
                        android:paddingTop="2dp"
                        android:textColor="@color/Black"
                        android:text="Investigation report form *" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/real"
                    android:layout_below="@+id/rea"
                    android:padding="5dp"

                    >
                    <TextView
                        android:id="@+id/file13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/title13"
                        android:text="Choose File"
                        android:layout_marginTop="3dp"
                        android:padding="3dp"
                        android:fontFamily="@font/verdana"
                        android:textColor="@color/Black"
                        android:textSize="16dp"
                        android:background="@drawable/rounded_border_edittext"/>

                    <TextView
                        android:id="@+id/filename13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/file13"
                        android:layout_alignBottom="@+id/file13"
                        android:layout_marginLeft="11dp"
                        android:layout_marginStart="11dp"
                        android:layout_toEndOf="@+id/file13"
                        android:layout_toRightOf="@+id/file13"
                        android:fontFamily="@font/verdana"
                        android:textSize="12dp"
                        android:text="No file chosen  File Should be pdf/doc Format"
                        android:textColor="@color/Black" />

                    <TextView
                        android:id="@+id/title13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/verdana"
                        android:textSize="13dp"
                        android:paddingTop="2dp"
                        android:textColor="@color/Black"
                        android:text="Treating doctor Questionnaire *" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/real5"
                    android:layout_below="@+id/real"
                    android:padding="5dp"

                    >

                    <EditText
                        android:id="@+id/ed_family"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/rounded_border_edittext"
                        android:ems="10"
                        android:fontFamily="@font/verdana"
                        android:gravity="bottom"
                        android:hint="Any Comment`s in the visit"
                        android:inputType="textMultiLine"
                        android:paddingBottom="2dp"
                        android:paddingLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/Black"
                        android:textSize="12sp" />

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/LinearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/real5"
                    android:orientation="vertical" >

                <include android:id="@+id/news_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    layout="@layout/hospitalpartsecond"/>
                </LinearLayout>
            </RelativeLayout>




</ScrollView>
