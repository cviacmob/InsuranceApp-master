<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >


        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="7dp"
            card_view:cardBackgroundColor="@color/backgroudcolor"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rel"

                android:layout_marginLeft="5dp">


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignLeft="@+id/view"
                    android:layout_alignStart="@+id/view"
                    android:layout_alignTop="@+id/textView3"
                    android:background="@drawable/money">

                </ImageView>


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp"
                    android:layout_toEndOf="@+id/imageView2"
                    android:layout_toRightOf="@+id/imageView2"
                    android:fontFamily="@font/verdana"
                    android:text="Payments"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="13dp"
                    android:layout_below="@+id/textView3"
                    android:background="@color/colorPrimary"
                    android:id="@+id/view" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="5dp">


                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:id="@+id/tableLayout">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/firstrow">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:fontFamily="@font/verdana"
                            android:text="Claim Number  "
                            android:textColor="#393534"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:width="200px"
                            android:textSize="12sp"
                            android:fontFamily="@font/verdana"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/Black"
                            android:text=""/>
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/secondrow">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/verdana"
                            android:text="Patient Name "
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="#393534"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Black"
                            android:textSize="12sp"
                            android:fontFamily="@font/verdana"
                            android:layout_marginLeft="15dp"
                            android:text=""/>
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/thirdrow">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/verdana"
                            android:text="Block Name "
                            android:textStyle="bold"
                            android:textColor="#393534"
                            android:textSize="12sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:fontFamily="@font/verdana"
                            android:width="400px"
                            android:textColor="@color/Black"
                            android:layout_marginLeft="15dp"
                            android:text=""/>
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fourthrow">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/verdana"
                            android:text="Consultant Fee"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="#393534"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:fontFamily="@font/verdana"
                            android:width="100px"
                            android:textColor="@color/Black"
                            android:layout_marginLeft="15dp"
                            android:text=""/>
                    </TableRow>


                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fifthrow">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/verdana"
                            android:text="Insentivies"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="#393534"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:fontFamily="@font/verdana"
                            android:width="100px"
                            android:textColor="@color/Black"
                            android:layout_marginLeft="15dp"
                            android:text=""/>
                    </TableRow>


                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sixthrow">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/verdana"
                            android:text="TA(pay convance)"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="#393534"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:width="200px"
                            android:textSize="12sp"
                            android:textColor="@color/Black"
                            android:fontFamily="@font/verdana"
                            android:layout_marginLeft="15dp"
                            android:text=""/>
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/seventhrow">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/verdana"
                            android:text="MRD"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="#393534"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:width="200px"
                            android:textSize="12sp"
                            android:fontFamily="@font/verdana"
                            android:textColor="@color/Black"
                            android:layout_marginLeft="15dp"
                            android:text=""/>
                    </TableRow>



                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ninthrow">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/verdana"
                            android:text="Total Amount"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="#393534"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:fontFamily="@font/verdana"
                            android:width="100px"
                            android:textColor="@color/Black"
                            android:layout_marginLeft="15dp"
                            android:text=""/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
</LinearLayout>
